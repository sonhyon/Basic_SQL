USE SAKILA;
SELECT FIRST_NAME FROM CUSTOMER;
SELECT * FROM CUSTOMER;
SHOW COLUMNS FROM SAKILA.CUSTOMER; #CUSTOMER 테이블의 열 정보 조회

SELECT * FROM CUSTOMER WHERE ADDRESS_ID = 200;
SELECT * FROM CUSTOMER WHERE ADDRESS_ID between 5 AND 10;
SELECT * FROM CUSTOMER
WHERE FIRST_NAME = 'MARIA' OR FIRST_NAME = 'LINDA';
SELECT * FROM CUSTOMER
WHERE first_NAME IN ('MARIA', 'LINDA', 'NANCY');
SELECT * FROM ADDRESS WHERE ADDRESS2 IS NULL; #NULL 조회하기
SELECT * FROM ADDRESS WHERE ADDRESS2 IS NOT NULL; #NULL이 아닌 데이터 조회하기
SELECT * FROM ADDRESS WHERE ADDRESS2 = ''; #공백을 조회하기

SELECT * FROM CUSTOMER ORDER BY FIRST_NAME; #FIRST_NAME 열을 기준으로 정렬
SELECT * FROM CUSTOMER ORDER BY FIRST_NAME ASC; #FIRST_NAME 열을 오름차순으로 정렬
SELECT * FROM CUSTOMER ORDER BY FIRST_NAME DESC; #FIRST_NAME 열을 내림차순으로 정렬
SELECT * FROM CUSTOMER order by STORE_ID DESC, FIRST_NAME ASC; #오름차순, 내림차순을 조합해 데이터 정렬
SELECT * FROM CUSTOMER order by STORE_ID DESC, FIRST_NAME ASC LIMIT 10; #LIMIT으로 상위 10개의 데이터 조회
SELECT * FROM CUSTOMER order by STORE_ID DESC, FIRST_NAME ASC LIMIT 100, 10; #LIMIT으로 101번째부터 10개의 데이터 조회
SELECT * FROM CUSTOMER order by CUSTOMER_ID ASC LIMIT 10 OFFSET 100; #데이터 100개를 건너뛰고 데이터 10개 조회 / OFFSET은 LIMIT과 함께 사용해야함

SELECT * FROM CUSTOMER WHERE FIRST_NAME LIKE 'A%';
SELECT * FROM CUSTOMER WHERE FIRST_NAME LIKE 'AA%';
SELECT * FROM CUSTOMER WHERE FIRST_NAME LIKE 'RA%';
SELECT * FROM CUSTOMER WHERE FIRST_NAME LIKE '%A%'; #A를 포함한 FIRST열의 데이터 조회
SELECT * FROM CUSTOMER WHERE FIRST_NAME NOT LIKE 'A%'; #첫 번째 글자가 A로 시작하지 않는 데이터만 조회

WITH CTE (COL_1) AS ( #테이블 생성
SELECT 'A%BC' UNION ALL
SELECT 'A_BC' UNION ALL
SELECT 'ABC'
)
SELECT * FROM CTE;

WITH CTE (COL_1) AS ( #테이블 생성
SELECT 'A%BC' UNION ALL
SELECT 'A_BC' UNION ALL
SELECT 'ABC'
)
SELECT * FROM CTE WHERE COL_1 LIKE '%'; #특수문자 %가 들어간 데이터 조회가 안됨 (%는 0개 이상의 문자를 의미하기 때문)

WITH CTE (COL_1) AS ( #테이블 생성
SELECT 'A%BC' UNION ALL
SELECT 'A_BC' UNION ALL
SELECT 'ABC'
)
SELECT * FROM CTE WHERE COL_1 LIKE '%#%%' ESCAPE '#'; #ESCAPE로 특수문자 포함한 데이터 조회

SELECT * FROM CUSTOMER WHERE FIRST_NAME LIKE 'A__'; #A로 시작하면서 문자열 길이가 3인 데이터 조회
SELECT * FROM CUSTOMER WHERE FIRST_NAME LIKE '_____'; #문자열 길이가 5인 데이터 조회
